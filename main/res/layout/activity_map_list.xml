<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/maplist_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.wunderlist.slidinglayer.SlidingLayer
        android:id="@+id/maplist_sliding_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/maplist_sliding_layer_fragcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="10dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            >

        </android.support.v7.widget.CardView>

    </com.wunderlist.slidinglayer.SlidingLayer>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/maplist_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/maplist_map"
        android:layout_alignRight="@+id/maplist_map"
        android:layout_margin="16dp"
        android:src="@drawable/hamburger_menu_icon"
        app:backgroundTint="@color/colorAccentRed"
        />



</RelativeLayout>
