<?xml version="1.0" encoding="utf-8"?>
<!--

    The purpose of DevMainActivity

    DevMainActivity is a gateway activity leading to other activities under development.
    If a developer wants to add a new activity, He can do so by adding a button that triggers
    to pull out the activity.

    DevMainActivity takes the role of main activity in the development branch and its subordinate branches.


    @Author John Koo

-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.johnjhkoo.mig_android.DevMainActivity"
    tools:showIn="@layout/activity_dev_main">

    <Button
        android:id="@+id/dev_main_to_maplist_activity"
        android:layout_below="@+id/dev_main_to_map_activity"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <Button
        android:id="@+id/dev_main_to_testlist_activity"
        android:layout_below="@+id/dev_main_to_maplist_activity"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <Button
        android:id="@+id/dev_main_to_gridlist_activity"
        android:layout_below="@+id/dev_main_to_testlist_activity"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</RelativeLayout>
